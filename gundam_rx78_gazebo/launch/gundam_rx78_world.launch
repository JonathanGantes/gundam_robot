<launch>

  <!-- these are the arguments you can pass this launch file, for example paused:=true -->
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>

  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find gundam_rx78_gazebo)/worlds/gundam_rx78.world"/>
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="headless" value="$(arg headless)"/>
  </include>

  <!-- Load the URDF into the ROS Parameter Server -->
  <include file="$(find gundam_rx78_description)/launch/upload.launch" />

  <!-- Run a python script to the send a service call to gazebo_ros to spawn a URDF robot -->
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
        args="-urdf -model GGC_TestModel_rx78_20170112 -param robot_description
              -z 11.5
              -J head_neck_p_position -0.5
              -J head_neck_y_position  0.5

              -J torso_waist_p_position  0.1
              -J torso_waist_y_position  0.1

              -J larm_shoulder_r_position  0.2
              -J larm_shoulder_y_position  0.0
              -J larm_shoulder_p_position  0.5
              -J larm_elbow_p_position    -0.5
              -J larm_wrist_r_position     0.0
              -J larm_wrist_y_position     0.0

              -J rarm_shoulder_r_position  0.2
              -J rarm_shoulder_y_position  0.0
              -J rarm_shoulder_p_position  0.5
              -J rarm_elbow_p_position    -0.5
              -J rarm_wrist_r_position     0.0
              -J rarm_wrist_y_position     0.0

              -J lleg_crotch_p_position   -0.2
              -J lleg_crotch_r_position   -0.1
              -J lleg_crotch_y_position   -0.05
              -J lleg_knee_p_position      0.4
              -J lleg_ankle_p_position    -0.2
              -J lleg_ankle_r_position     0.0

              -J rleg_crotch_p_position   -0.2
              -J rleg_crotch_r_position    0.1
              -J rleg_crotch_y_position    0.05
              -J rleg_knee_p_position      0.4
              -J rleg_ankle_p_position    -0.2
              -J rleg_ankle_r_position     0.0
              " />
  <!-- ros_control gundam_rx78 launch file -->
  <include file="$(find gundam_rx78_control)/launch/gundam_rx78_control.launch" />

  <!-- forwards odometry information to tf -->
  <node pkg="fake_localization" name="fake_localization"  type="fake_localization" output="screen" >
    <remap from="base_pose_ground_truth" to="base_link_ground_truth" />
    <param name="~base_frame_id" value="base_link" />
    <param name="~odom_frame_id" value="base_link" />
  </node>
</launch>
